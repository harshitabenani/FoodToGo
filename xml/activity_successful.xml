<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuccessfulActivity"
    android:background="#1e1e1e">

    <ImageView
        android:id="@+id/imgTick"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_tick"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtPlaced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your order has been successfully placed!"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_below="@id/imgTick"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"

        />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtPlaced"
        android:layout_marginTop="120dp"
        android:text="OK"
        android:textColor="#ffffff"
        android:background="@drawable/button_border"
        android:layout_centerHorizontal="true"></Button>




</RelativeLayout>